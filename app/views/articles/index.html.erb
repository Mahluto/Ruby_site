<p id="notice"><%= notice %></p>


<h1>Список статьй</h1>

<table class="table table-striped">

  <thead>
    <tr>
      <th>Название</th>
      <th>Текст</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Показать', article %></td>
        <td><%= link_to 'Редактировать', edit_article_path(article) %></td>
        <td><%= link_to 'Удалить', article, method: :delete, data: { confirm: 'Вы уверены' } %></td>
        <td><%= link_to 'Показать дату миграций' %></td>
      </tr>
    <% end %>
  </tbody>
</table>











